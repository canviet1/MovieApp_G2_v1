<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="#2A2A2A"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="731dp"
        android:background="#2A2A2A"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/avatar"
            android:layout_marginTop="100dp"
            android:layout_width="100dp"
            android:layout_height="121dp"
            android:layout_gravity="center"
            android:src="@drawable/account"
            app:shapeAppearanceOverlay="@style/Animation.Design.BottomSheetDialog" />


        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="DuongDMHE172131@fpt.edu.vn"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/watch_list_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Danh sách phim đang xem"
                android:textColor="@color/black"
                app:backgroundTint="@color/white"
                app:cornerRadius="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/favorite_list_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Danh sách phim yêu thích"
                android:textColor="@color/black"
                app:backgroundTint="@color/white"
                app:cornerRadius="4dp" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/logout_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Đăng xuất"
            android:textColor="@color/white"
            app:backgroundTint="#D32F2F"
            app:cornerRadius="4dp" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
